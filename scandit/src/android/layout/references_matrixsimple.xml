<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="horizontal"></LinearLayout>

    <FrameLayout
      android:id="@+id/picker"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1">

    </FrameLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
  >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      android:background="@color/transparentScanner"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tvPackingStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/transparentWhite"
        android:textSize="18sp"
        android:visibility="gone" />

      <TextView
        android:id="@+id/tvPackingEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/transparentWhite"
        android:textSize="18sp"
        android:visibility="gone" />

      <include
        android:id="@+id/rlInfoProduct"
        layout="@layout/next_product_info"
        android:visibility="gone" />

    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="4"
      android:orientation="horizontal"
    />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center_horizontal|bottom"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tvBottomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:textColor="@color/transparentWhite"
        android:textSize="18sp"
        android:visibility="gone" />

      <Button
        android:id="@+id/btnFinishReception"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/black"
        android:text="Finalizar recepciÃ³n"
        android:textColor="@color/white"
        android:visibility="gone" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/llScanInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:background="@color/transparentScanner"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:orientation="vertical"
    android:visibility="gone"
  >

    <TextView
      android:id="@+id/tvScanInfo"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_weight="3"
      android:layout_marginLeft="3dp"
      android:layout_marginRight="3dp"
      android:layout_marginTop="1dp"
      android:layout_marginBottom="1dp"
      android:gravity="center|center_vertical"
      android:textSize="20sp" />

    <RelativeLayout
      android:id="@+id/rlScanInfoLoader"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:visibility="gone">
      <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp">
      </ProgressBar>
    </RelativeLayout>

  </LinearLayout>

</RelativeLayout>
