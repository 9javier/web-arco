<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">

  <FrameLayout
    android:id="@+id/picker"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/transparentScanner">

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/transparentScanner" />

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="8">

          <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/corner_top_left" />

          <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/corner_top_right" />

          <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corner_bottom_left" />

          <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/corner_bottom_right" />

        </RelativeLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/transparentScanner" />

      </LinearLayout>

    </LinearLayout>

    <LinearLayout
      android:id="@+id/PriceInfo"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="7"
      android:background="@color/transparentScanner"
      android:orientation="vertical">

      <LinearLayout
        android:id="@+id/TopInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
          android:id="@+id/message"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginStart="5dp"
          android:layout_weight="5"
          android:gravity="center_vertical"
          android:text="@string/mensaje_de_ejemplo"
          android:textAlignment="center"
          android:textColor="#FFFFFF" />

        <Button
          android:id="@+id/button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="20dp"
          android:layout_weight="2"
          android:gravity="center_vertical"
          android:text="@string/imprimir"
          android:textAlignment="center" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/BottomInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:baselineAligned="false">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_marginStart="30dp"
          android:layout_weight="5"
          android:orientation="vertical">


          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/refLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/referencia"
              android:textColor="#FFFFFF"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/refEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:text="@string/ejemplo"
              android:textColor="#FFFFFF" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/braLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/marca"
              android:textColor="#FFFFFF"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/braEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:text="@string/ejemplo"
              android:textColor="#FFFFFF" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/styLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/estilo"
              android:textColor="#FFFFFF"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/styEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:text="@string/ejemplo"
              android:textColor="#FFFFFF" />
          </LinearLayout>

        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="5"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/staLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/estado"
              android:textColor="#FFFFFF"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/staEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:text="@string/ejemplo"
              android:textColor="#FFFFFF" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
              android:id="@+id/priLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/precio"
              android:textColor="#FFFFFF"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/priEdit"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="5dp"
              android:text="@string/ejemplo"
              android:textColor="#FFFFFF" />
          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>
  </LinearLayout>

</RelativeLayout>
